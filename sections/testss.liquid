<!-- sections/example-section.liquid -->
<div class="example-section">
  <h1 style="color:{{section.settings.text_color}}; font-size:{{ section.settings.text_size }};">
    {{ section.settings.heading }}
  </h1>
  <p>{{ section.settings.text }}</p>
  
  {% for block in section.blocks %}
    <div class="example-block">
      {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.image_alt }}" />
      {% endif %}
      <h2>{{ block.settings.block_heading }}</h2>
      <p>{{ block.settings.block_text }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Example Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Default text."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text Size",
      "default": "16px",
      "options": [
        {
          "value": "12px",
          "label": "Small"
        },
        {
          "value": "16px",
          "label": "Medium"
        },
        {
          "value": "20px",
          "label": "Large"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "example_block",
      "name": "Example Block",
      "settings": [
        {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading",
          "default": "Default Block Heading"
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Block Text",
          "default": "Default block text."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text",
          "default": ""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Example Section with Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}
